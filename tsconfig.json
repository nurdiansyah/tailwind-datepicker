{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "libs",
    "emitDeclarationOnly": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
